{
  "publisher": "Feureau",
  "name": "one-sentence-per-line",
  "displayName": "OneSentencePerLine",
  "description": "This VS Code extension automatically reformats text so that each sentence appears on its own line, improving readability and version control in Markdown, documentation, and plain text files.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Feureau/one-sentence-per-line.git"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:one-sentence-per-line.helloWorld",
    "onCommand:one-sentence-per-line.format",
    "onCommand:one-sentence-per-line.toggleAutoFormat",
    "onLanguage:markdown",
    "onLanguage:plaintext"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "one-sentence-per-line.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "one-sentence-per-line.format",
        "title": "Format: One Sentence Per Line"
      },
      {
        "command": "one-sentence-per-line.toggleAutoFormat",
        "title": "Toggle Auto-Format"
      }
    ],
    "keybindings": [
      {
        "command": "one-sentence-per-line.helloWorld",
        "key": "ctrl+alt-h",
        "mac": "cmd+alt-h",
        "when": "editorTextFocus"
      },
      {
        "command": "one-sentence-per-line.format",
        "key": "ctrl+alt-f",
        "mac": "cmd+alt-f",
        "when": "editorTextFocus"
      },
      {
        "command": "one-sentence-per-line.toggleAutoFormat",
        "key": "ctrl+alt-t",
        "mac": "cmd+alt-t",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "One Sentence Per Line Configuration",
      "properties": {
        "oneSentencePerLine.autoFormat": {
          "type": "boolean",
          "default": true,
          "description": "Automatically enforce one sentence per line on every text change for supported text files (Markdown, plaintext, etc.)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "sbd": "^1.0.19"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "esbuild": "^0.25.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
